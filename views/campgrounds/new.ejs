<% layout('layouts/boilerplate') %>

    <div class="row">
        <h1 class="text-center">New Campground</h1>

        <div class="col-md-6 offset-md-3">

            <form action="/campgrounds" method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <!-- o multipart é um dos passos para enviar imagens -->

                <!-- title -->
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" required>
                </div>

                <!-- location -->
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" required>
                </div>

                <!-- price -->
                <div class="mb-3">
                    <label class="form-label" for="price">Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input class="form-control" type="text" name="campground[price]" id="price"
                            aria-describedby="price-label" placeholder="0.00" required>
                    </div>
                </div>

                <!-- description -->
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description"
                        required></textarea>
                </div>

                <!-- image -->

                <div class="input-group mb-3">
                    <input type="file" class="form-control" id="image" name="image" multiple>
                    <label class="input-group-text" for="image">Upload</label>
                </div>

                <!-- bt submit -->
                <div class="mb-3">
                    <button class="btn btn-success">Add Campground</button>
                </div>

            </form>
            <a href="/campgrounds">Show All Campgrounds</a>

        </div>
    </div>

    <!-- Obs: quando eu faço name: campground[title], ele adiciona o valor dentro de um conjunto campground, tipo {campground: title: userInput, location: userInput}. Nesse caso, quando for chamar o req.body, tem que chamar o req.body.campground -->